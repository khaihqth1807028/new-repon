<Page
    x:Class="App5.Demo.ScrollViewerDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App5.Demo"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:entity="using:App5.Entity"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel>
        <ListView x:Name="MyListView" ItemsSource="{x:Bind listStudents}">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="entity:Student">
                    <StackPanel Orientation="Horizontal">
                        <Ellipse Height="60" Width="60">
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="{Binding rollNumber}" />
                            </Ellipse.Fill>
                        </Ellipse>
                        <TextBlock FontSize="20" FontWeight="Bold" Text="{Binding name}"></TextBlock>
                        <SymbolIcon Symbol="Play"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <TextBlock x:Name="TokenKey"></TextBlock>
    </StackPanel>


</Page>
